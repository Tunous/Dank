<resources>

  <!--<string name="dank_default_font_family">@fsans-serif-condensed</string>-->

  <style name="DankTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/color_accent</item>

    <item name="android:textViewStyle">@style/DankDefaultTextViewStyle</item>
    <item name="editTextStyle">@style/DankDefaultEditTextStyle</item>
    <item name="android:buttonStyle">@style/DankButton</item>
    <item name="android:switchTextAppearance">@style/DankSwitchTextAppearance</item>

    <item name="android:windowBackground">@color/window_background</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@color/color_primary_dark</item>
    <item name="android:navigationBarColor">@color/navigation_bar</item>
    <item name="android:backgroundDimEnabled">false</item>

    <item name="dank_font_family">@font/bifocals</item>

    <!-- Popups -->
    <item name="alertDialogTheme">@style/DankDialogTheme</item>
    <item name="popupMenuStyle">@style/DankPopupMenu</item>
    <item name="textAppearanceLargePopupMenu">@style/DankPopupMenuTextAppearance</item>
    <item name="textAppearancePopupMenuHeader">@style/DankPopupMenuHeaderTextAppearance</item>

    <!-- Text -->
    <item name="android:textColorPrimary">@color/text_color_primary</item>
    <item name="android:textColorSecondary">@color/text_color_secondary</item>
  </style>

  <style name="DankTheme.Splash">
    <item name="android:windowBackground">@drawable/background_splash</item>
  </style>

  <style name="DankTheme.TransparentBackground">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
  </style>

  <style name="DankTheme.TransparentBackground.Fullscreen">
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="DankDialogTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
    <item name="android:windowTitleStyle">@style/DankDialogTitleStyle</item>
    <item name="android:windowBackground">@drawable/background_dialog</item>
  </style>

  <style name="DankTheme.DialogLikeActivity" parent="DankTheme.TransparentBackground">
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@color/transparent</item>
    <item name="android:navigationBarColor">@color/transparent</item>
  </style>

  <style name="DankTheme.DialogLikeActivity.MorphFromFab">
    <item name="android:windowAllowReturnTransitionOverlap">false</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@null</item>
  </style>

  <style name="DankDialogTitleStyle" parent="@android:style/TextAppearance.Material.WindowTitle">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
  </style>

  <style name="DankToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/color_accent</item>
  </style>

  <style name="DankSeparator">
    <item name="android:background">@color/white_opacity_05</item>
  </style>

  <style name="DankSeparator.VerticalContent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
  </style>

  <style name="DankSeparator.HorizontalContent">
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="DankButton" parent="Widget.AppCompat.Button">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
  </style>

  <style name="DankButton.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
  </style>

  <style name="DankButton.Borderless.Colored" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
  </style>

  <style name="DankToolbarIcon">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:padding">@dimen/spacing8</item>
  </style>

  <style name="DankProgressBar" />

  <style name="DankProgressBar.Horizontal" parent="android:Widget.Material.ProgressBar.Horizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:indeterminate">true</item>
  </style>

  <style name="DankProgressBar.Horizontal.TopAligned">
    <item name="android:layout_marginTop">-7dp</item>
  </style>

  <style name="DankProgressBar.Horizontal.BottomAligned">
    <item name="android:layout_marginBottom">-7dp</item>
  </style>

  <style name="DankToolbar">
    <item name="titleTextAppearance">@style/DankToolbarTitleAppearance</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/toolbar</item>
    <item name="android:elevation">@dimen/elevation_toolbar</item>
  </style>

  <style name="DankDefaultTextViewStyle" parent="@android:style/Widget.TextView">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
  </style>

  <style name="DankDefaultEditTextStyle" parent="@android:style/Widget.EditText">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
  </style>

  <style name="DankSwitchTextAppearance" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
    <!--<item name="fontFamily">?attr/dank_font_family</item>-->
  </style>

  <style name="DankPopupMenu" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
    <item name="overlapAnchor">true</item>
  </style>

  <style name="DankPopupWindow">
    <item name="android:popupElevation">@dimen/spacing16</item>
  </style>

  <style name="DankPopupMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large" />

  <style name="DankPopupMenuHeaderTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header">
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/gray_500</item>
    <item name="android:textSize">@dimen/textsize12</item>
  </style>

  <style name="DankTextInputLayoutErrorTextAppearance">
    <item name="android:textColor">@color/error_text_color</item>
  </style>

  <style name="DankPullCollapsibleActivityPage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/window_background</item>
    <item name="android:elevation">@dimen/elevation_nested_expandable_sheet</item>
  </style>

  <style name="ErrorStateEmoji">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray_400</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="ErrorStateMessage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/spacing16</item>
    <item name="android:layout_marginStart">@dimen/spacing16</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:lineSpacingExtra">@dimen/spacing4</item>
    <item name="android:textColor">@color/gray_500</item>
    <item name="android:textSize">@dimen/textsize14</item>
  </style>

  <style name="ErrorStateRetryButton" parent="DankButton.Borderless.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing8</item>
  </style>

  <style name="DankInfiniteScrollHeaderFooterTextWithIcon">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:drawablePadding">@dimen/spacing16</item>
    <item name="android:drawableStart">@drawable/ic_error_24dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/red_A100</item>
  </style>

  <style name="DankRecyclerView">
    <item name="android:scrollbarStyle">insideOverlay</item>
    <item name="android:scrollbars">vertical</item>
  </style>

  <!-- Subreddit -->
  <style name="SubredditPickerSearchFieldTheme">
    <item name="android:colorControlNormal">@color/gray_800</item>
    <item name="android:colorControlActivated">@color/gray_500</item>
  </style>

  <style name="DankButton.SubredditPicker">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:backgroundTint">@color/subredditpicker_subreddit_button_tint_normal</item>
    <item name="android:gravity">start|center</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingBottom">@dimen/spacing12</item>
    <item name="android:paddingTop">@dimen/spacing12</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/subredditpicker_subreddit_button_text_normal</item>
    <item name="android:textSize">@dimen/textsize18</item>
  </style>

  <style name="DankButton.UserProfileSheet">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:textColor">@color/userprofile_no_messages</item>
    <item name="android:clickable">true</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:gravity">center_vertical|start</item>
    <item name="android:drawablePadding">@dimen/spacing24</item>
    <item name="android:paddingBottom">@dimen/spacing12</item>
    <item name="android:paddingEnd">@dimen/spacing16</item>
    <item name="android:paddingStart">@dimen/spacing16</item>
    <item name="android:paddingTop">@dimen/spacing12</item>
    <item name="android:textSize">@dimen/textsize16</item>
  </style>

  <style name="DankPopupMenu.SubredditOptions">
    <item name="android:dropDownHorizontalOffset">@dimen/popup_menu_horizontal_offset_for_button</item>
    <item name="android:dropDownVerticalOffset">-4dp</item>
    <item name="overlapAnchor">false</item>
    <item name="android:overlapAnchor">false</item>
  </style>

  <style name="DankPopupMenu.SubmissionSortingMode">
    <item name="android:dropDownHorizontalOffset">@dimen/popup_menu_horizontal_offset_for_button</item>
    <item name="android:dropDownVerticalOffset">@dimen/popup_menu_vertical_offset_for_button</item>
  </style>

  <style name="DankSwipeableLayoutIcon">
    <item name="android:layout_width">56dp</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:padding">@dimen/spacing16</item>
  </style>

  <!-- Submission -->
  <style name="DankSubmissionCommentItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="indentationLineColor">@color/gray_850</item>
    <item name="indentationLineWidth">1dp</item>
    <item name="spacePerDepth">@dimen/spacing12</item>
  </style>

  <!-- Inbox -->
  <style name="DankMessageByline">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray_500</item>
  </style>

  <style name="DankMessageBody">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray_300</item>
    <item name="android:lineSpacingExtra">@dimen/spacing2</item>
  </style>

  <style name="DankMessageBody.Threaded">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing8</item>
    <item name="android:background">@drawable/background_message_content</item>
    <item name="android:padding">@dimen/spacing12</item>
    <item name="android:textColor">@color/gray_400</item>
    <item name="android:textIsSelectable">true</item>
  </style>

  <style name="DankMessageByline.Threaded">
    <item name="android:layout_marginTop">@dimen/spacing4</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:paddingEnd">@dimen/spacing12</item>
    <item name="android:paddingStart">@dimen/spacing12</item>
  </style>

  <style name="DankThreadedMessageContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/window_background</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:orientation">vertical</item>
    <item name="android:paddingBottom">@dimen/spacing16</item>
  </style>

  <style name="DankFAB">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">bottom|end</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_alignParentEnd">true</item>
    <item name="android:layout_margin">@dimen/spacing16</item>
    <item name="fabSize">normal</item>
    <item name="android:tint">@color/teal_900</item>
    <item name="rippleColor">@color/color_accent_light</item>
  </style>

  <style name="DankButton.SortingMode">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:backgroundTint">@color/gray_800</item>
    <item name="android:drawablePadding">@dimen/spacing8</item>
    <item name="android:drawableStart">@drawable/ic_sort_16dp</item>
    <item name="android:elevation">10dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingBottom">@dimen/spacing12</item>
    <item name="android:paddingEnd">@dimen/spacing12</item>
    <item name="android:paddingStart">@dimen/spacing12</item>
    <item name="android:paddingTop">@dimen/spacing12</item>
    <item name="android:textColor">@color/gray_300</item>
  </style>

  <!-- User profile popup -->
  <style name="DankUserProfilePopupStatsContainer">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="DankUserProfilePopupStatsValue">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray_300</item>
    <item name="android:textSize">@dimen/textsize18</item>
  </style>

  <style name="DankUserProfilePopupStatsLabel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/textsize14</item>
    <item name="android:textColor">@color/gray_500</item>
    <item name="android:layout_marginTop">@dimen/spacing4</item>
  </style>

  <!-- Media -->
  <style name="DankMediaAlbumViewerOption">
    <item name="android:layout_marginStart">@dimen/spacing2</item>
    <item name="android:layout_marginEnd">@dimen/spacing2</item>
    <item name="android:padding">@dimen/spacing16</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
  </style>

  <style name="DankPopupMenu.AlbumViewerOption">
    <item name="android:dropDownVerticalOffset">-96dip</item>
    <item name="android:dropDownHorizontalOffset">8dip</item>
  </style>

  <style name="DankMediaImageScrollHint">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/background_submission_image_scroll_hint</item>
    <item name="android:drawablePadding">@dimen/spacing4</item>
    <item name="android:drawableStart">@drawable/ic_arrow_downward_18dp</item>
    <item name="android:elevation">@dimen/elevation_toolbar</item>
    <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:paddingBottom">@dimen/spacing8</item>
    <item name="android:paddingEnd">@dimen/spacing12</item>
    <item name="android:paddingStart">@dimen/spacing12</item>
    <item name="android:paddingTop">@dimen/spacing8</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="DankMediaAlbumViewer">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_margin">@dimen/spacing24</item>
    <item name="android:background">@drawable/background_mediaalbumviewer_error_state</item>
    <item name="android:paddingEnd">@dimen/spacing16</item>
    <item name="android:paddingStart">@dimen/spacing16</item>
    <item name="android:paddingTop">@dimen/spacing16</item>
  </style>

  <style name="DankProgressBarFileSize">
    <item name="android:background">@drawable/background_media_progress_bar_file_size</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:paddingBottom">@dimen/spacing2</item>
    <item name="android:paddingEnd">@dimen/spacing8</item>
    <item name="android:paddingStart">@dimen/spacing8</item>
    <item name="android:paddingTop">@dimen/spacing2</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!-- Compose -->
  <style name="DankTextFormatToolbarButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:padding">@dimen/spacing12</item>
  </style>
</resources>
