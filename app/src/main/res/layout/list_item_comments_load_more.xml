<?xml version="1.0" encoding="utf-8"?>
<me.saket.dank.widgets.IndentedLayout android:id="@+id/item_loadmorecomments_indented_container"
  style="@style/DankSubmissionCommentItem"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:elevation="@dimen/submission_comment_elevation"
  android:outlineProvider="none">

  <me.saket.dank.widgets.TintableCompoundDrawableButton
    android:id="@+id/item_loadmorecomments_load_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/spacing8"
    android:layout_marginStart="@dimen/spacing8"
    android:backgroundTint="@color/color_primary"
    android:clickable="false"
    android:drawableEnd="@drawable/ic_arrow_forward_12dp"
    android:drawablePadding="@dimen/spacing4"
    android:minHeight="0dp"
    android:minWidth="0dp"
    android:paddingBottom="@dimen/spacing12"
    android:paddingTop="@dimen/spacing12"
    android:text="@string/submission_load_more_comments"
    android:textColor="@color/text_secondary"
    android:textSize="@dimen/textsize12" />
</me.saket.dank.widgets.IndentedLayout>
